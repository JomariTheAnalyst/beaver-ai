// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  clerkId   String   @unique
  email     String   @unique
  name      String?
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  projects      Project[]
  conversations Conversation[]
}

model Project {
  id          String   @id @default(cuid())
  name        String
  description String?
  status      String   @default("PLANNING") // PLANNING, DEVELOPMENT, TESTING, COMPLETED, DEPLOYED, ERROR
  metadata    String?  // JSON string for SQLite
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  conversations Conversation[]
  sandboxes     Sandbox[]
  files         ProjectFile[]
}

model Conversation {
  id        String    @id @default(cuid())
  title     String?
  messages  Message[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  projectId String?
  project   Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model Message {
  id        String   @id @default(cuid())
  content   String
  role      String   // USER, ASSISTANT, SYSTEM
  agentType String?
  metadata  String?  // JSON string for SQLite
  images    String?  // JSON array of image URLs
  createdAt DateTime @default(now())
  
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
}

model Sandbox {
  id         String   @id @default(cuid())
  e2bId      String   @unique
  status     String   @default("CREATING") // CREATING, ACTIVE, STOPPED, ERROR
  previewUrl String?
  metadata   String?  // JSON string for SQLite
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now())
  
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  files SandboxFile[]
  logs  SandboxLog[]
}

model ProjectFile {
  id        String   @id @default(cuid())
  path      String
  content   String?
  size      Int?
  mimeType  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model SandboxFile {
  id        String   @id @default(cuid())
  path      String
  content   String?
  size      Int?
  mimeType  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  
  sandboxId String
  sandbox   Sandbox @relation(fields: [sandboxId], references: [id], onDelete: Cascade)
}

model SandboxLog {
  id        String   @id @default(cuid())
  type      String   // COMMAND, OUTPUT, ERROR, SYSTEM
  message   String
  level     String   @default("INFO") // DEBUG, INFO, WARN, ERROR
  metadata  String?  // JSON string for SQLite
  createdAt DateTime @default(now())
  
  sandboxId String
  sandbox   Sandbox @relation(fields: [sandboxId], references: [id], onDelete: Cascade)
}

model AgentActivity {
  id        String   @id @default(cuid())
  agentType String
  action    String
  status    String   // PENDING, RUNNING, COMPLETED, FAILED
  input     String?  // JSON string for SQLite
  output    String?  // JSON string for SQLite
  error     String?
  duration  Int?     // in milliseconds
  createdAt DateTime @default(now())
  
  projectId String?
}

model ProjectTemplate {
  id          String   @id @default(cuid())
  title       String
  description String
  techStack   String   // JSON array as string
  prompt      String   // The detailed prompt to insert
  imageUrl    String?
  category    String
  tags        String   // JSON array as string
  featured    Boolean  @default(false)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
}