// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  clerkId   String   @unique
  email     String   @unique
  name      String?
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  projects      Project[]
  conversations Conversation[]
}

model Project {
  id          String        @id @default(cuid())
  name        String
  description String?
  status      ProjectStatus @default(PLANNING)
  metadata    String?       // JSON string for SQLite
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  conversations Conversation[]
  sandboxes     Sandbox[]
  files         ProjectFile[]
}

model Conversation {
  id        String    @id @default(cuid())
  title     String?
  messages  Message[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  projectId String?
  project   Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model Message {
  id        String      @id @default(cuid())
  content   String
  role      MessageRole
  agentType String?
  metadata  String?     // JSON string for SQLite
  images    String?     // JSON array of image URLs
  createdAt DateTime    @default(now())
  
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
}

model Sandbox {
  id         String        @id @default(cuid())
  e2bId      String        @unique
  status     SandboxStatus @default(CREATING)
  previewUrl String?
  metadata   String?       // JSON string for SQLite
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt
  
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  files SandboxFile[]
  logs  SandboxLog[]
}

model ProjectFile {
  id        String   @id @default(cuid())
  path      String
  content   String?
  size      Int?
  mimeType  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model SandboxFile {
  id        String   @id @default(cuid())
  path      String
  content   String?
  size      Int?
  mimeType  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  sandboxId String
  sandbox   Sandbox @relation(fields: [sandboxId], references: [id], onDelete: Cascade)
}

model SandboxLog {
  id        String     @id @default(cuid())
  type      LogType
  message   String
  level     LogLevel   @default(INFO)
  metadata  String?    // JSON string for SQLite
  createdAt DateTime   @default(now())
  
  sandboxId String
  sandbox   Sandbox @relation(fields: [sandboxId], references: [id], onDelete: Cascade)
}

model AgentActivity {
  id        String           @id @default(cuid())
  agentType String
  action    String
  status    ActivityStatus
  input     String?          // JSON string for SQLite
  output    String?          // JSON string for SQLite
  error     String?
  duration  Int?            // in milliseconds
  createdAt DateTime        @default(now())
  
  projectId String?
}

model ProjectTemplate {
  id          String   @id @default(cuid())
  title       String
  description String
  techStack   String   // JSON array as string
  prompt      String   // The detailed prompt to insert
  imageUrl    String?
  category    String
  tags        String   // JSON array as string
  featured    Boolean  @default(false)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum ProjectStatus {
  PLANNING
  DEVELOPMENT
  TESTING
  COMPLETED
  DEPLOYED
  ERROR
}

enum MessageRole {
  USER
  ASSISTANT
  SYSTEM
}

enum SandboxStatus {
  CREATING
  ACTIVE
  STOPPED
  ERROR
}

enum LogType {
  COMMAND
  OUTPUT
  ERROR
  SYSTEM
}

enum LogLevel {
  DEBUG
  INFO
  WARN
  ERROR
}

enum ActivityStatus {
  PENDING
  RUNNING
  COMPLETED
  FAILED
}